@model string

@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"].</h2>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" class="form-horizontal">
                <h4>You can not enter the key, then the new one will be generated automatically</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input name="token" class="form-control" placeholder="Login (optional)" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>